<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/blue">
            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginBottom="35dp"
                android:scaleType="center"
                android:layout_gravity="center"
            >
            </ImageView>
            <TextView
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:text=""
                android:textAlignment="center"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:text=""
                android:textAlignment="center"
                android:layout_gravity="center" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/user_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textAlignment="center"
                />

        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp"
            app:cardElevation="2dp"
            android:layout_margin="10dp"
            android:background="#7CF2F2F2"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:background="#7CF2F2F2"
                    android:layout_marginBottom="10dp">
                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/isnull"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/ic_baseline_favorite_24">

                    </ImageView>
                    <ImageView
                        android:id="@+id/isnull"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_centerInParent="true">
                    </ImageView>

                    <ImageView
                        android:id="@+id/total_publish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@id/isnull"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_baseline_near_me_24">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="喜 欢"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_above="@+id/like"
                        android:layout_toLeftOf="@id/text_null">

                    </TextView>
                    <TextView
                        android:id="@+id/text_null"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_above="@+id/isnull"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="53dp">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发 布"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_above="@+id/total_publish"
                        android:layout_toRightOf="@id/text_null"
                        android:layout_centerVertical="true">

                    </TextView>

                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:text="22"
                        android:layout_below="@+id/like"
                        android:layout_toLeftOf="@id/text_null2"
                        android:layout_marginTop="3dp">

                    </TextView>
                    <TextView
                        android:id="@+id/text_null2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/isnull"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="68dp"
                        android:layout_marginLeft="45dp">
                    </TextView>
                    <TextView
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:text="56"
                        android:layout_toRightOf="@id/text_null2"
                        android:layout_below="@+id/total_publish"
                        android:layout_marginTop="3dp">

                    </TextView>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#7CF2F2F2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <kilig.ink.yxy.source.SettingItem

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:setting_icon="@drawable/ic_change"
                            app:setting_title="修改信息" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <kilig.ink.yxy.source.SettingItem

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:setting_icon="@drawable/ic_setting"
                            app:setting_title="设置" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <kilig.ink.yxy.source.SettingItem

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:setting_icon="@drawable/ic_help"
                            app:setting_title="帮助" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/black"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <kilig.ink.yxy.source.SettingItem

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:setting_icon="@drawable/ic_about"
                            app:setting_title="关于" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:background="@color/black"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginBottom="0dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:text="伊享云团队 版权所有" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:text="Copyright © 2020-2021 Yxy" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:textSize="14sp"
                            android:text="All Rights Reserved" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>